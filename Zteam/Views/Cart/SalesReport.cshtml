@model List<SalesReport>

<h2>Sales Reports</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Game Sold</th>
            <th>Quantity Sold</th>
            <th>Total Revenue</th>
            <th>Platform Share</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.PurchaseTime</td>
                <td>@report.GameSold</td>
                <td>@report.QuantitySold</td>
                <td>@report.TotalRevenue</td>
                <td>@report.PlatformShare</td>
            </tr>
        }
    </tbody>
</table>
